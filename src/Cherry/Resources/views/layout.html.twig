<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{% if page_title is defined %} {{ page_title }} | {% endif %} Tetiana Cherevan</title>
        <link href="/style.css" rel="stylesheet">
        <script src="/script.js"></script>
    </head>
    <body>
        <div class="container">
            <ul class="topnav" id="myTopnav">
                <li><a href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a></li>
                <li><a href="{{ path('art_works') }}">{{ 'menu.art_works'|trans }}</a></li>
                <li><a href="{{ path('about') }}">{{ 'menu.about'|trans }}</a></li>
                <li class="language-selector">
                    {% if 'en' == app.translator.locale %}
                        <a href="{{ path(global.request.get('_route'), global.request.get('_route_params')|merge({'_locale': 'uk'})) }}">Українською</a>
                    {% else %}
                        <a href="{{ path(global.request.get('_route'), global.request.get('_route_params')|merge({'_locale': 'en'})) }}">English</a>
                    {% endif %}
                </li>
                <li class="icon">
                    <a href="javascript:void(0);" onclick="menuToggle()">&#9776;</a>
                </li>
            </ul>
            <div class="content">
                {% block content %}{% endblock %}
            </div>
            <div class="sidebar">
                {% block sidebar %}{% endblock %}
            </div>
        </div>
    </body>
</html>
