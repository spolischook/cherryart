{% extends "Admin/adminLayout.html.twig" %}
{% block title %}Art Works{% endblock %}
{% block content %}
    <h1>Art Works   <a type="button" class="btn btn-default" href="{{ path('admin_create_work') }}">+ Create New</a></h1>

    {% if works is empty %}
        <div class="alert alert-warning" role="alert">There is no art works to display</div>
    {% else %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Preview</th>
                <th>Title</th>
                <th>Price</th>
                <th>In stock</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for work in works %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td><img src="{{ app.image_handler.getImageUrl(work.picture, 'art_work', 'admin') }} " class="img-thumbnail"></td>
                        <td>{{ work.title_en }}(en)<br />{{ work.title_uk }}(uk)</td>
                        <td>{{ work.price }}</td>
                        <td>
                            {% if work.in_stock == true %}
                                <span class="label label-success">In stock</span>
                            {% else %}
                                <span class="label label-default">Sold</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-default" aria-label="View">
                                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
                                </button>
                                <a type="button" href="{{ path('admin_edit_work', {'slug': work.slug}) }}" class="btn btn-default" aria-label="Edit">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                                </a>
                                <button type="button" class="btn btn-default" aria-label="Hide">
                                    <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span> Hide
                                </button>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
