{% extends "Admin/adminLayout.html.twig" %}
{% block title %}News{% endblock %}
{% block content %}
    <h1>News   <a type="button" class="btn btn-default" href="{{ path('admin_news_create') }}">+ Create New</a></h1>
    {% if news is empty %}
        <div class="alert alert-warning" role="alert">There is no news to display</div>
    {% else %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Preview</th>
                <th>Title</th>
                <th>Date</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in news %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td><img src="{{ app.image_handler.getImageUrl(item.picture, 'admin') }} " class="img-thumbnail"></td>
                    <td>{{ item.title_en }}(en)<br />{{ item.title_uk }}(uk)</td>
                    <td>{{ item.date }}</td>
                    <td>{{ item.type|trans }}</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default" aria-label="View">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> View
                            </button>
                            <a type="button" href="{{ path('admin_news_edit', {'id': item.id}) }}" class="btn btn-default" aria-label="Edit">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
                            </a>
                            <button type="button" class="btn btn-default" aria-label="Hide">
                                <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span> Hide
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
